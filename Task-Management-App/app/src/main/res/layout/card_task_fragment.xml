<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_card_task"
        android:clickable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/valuetxtTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/muli_bold"
                android:gravity="center"
                android:singleLine="true"
                android:text="Task NameTask NameTask"
                android:textColor="@color/title"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/br_horizontal" />

            <TextView
                android:id="@+id/valuetxtAssignee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:lines="1"
                android:text="Cao Thanh Thu"
                android:textColor="@color/nameCard"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valuetxtDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="13:30 | Mar 21,2020"
                android:textColor="@color/time"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/br_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/valuetxtStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:singleLine="true"
                android:text="Done"
                android:textColor="@color/status"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>