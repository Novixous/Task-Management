<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/card_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_card_task"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Group Name"
            android:textColor="@color/title"
            android:fontFamily="@font/muli_bold"
            android:textSize="20dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/txtDesGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:maxLines="2"
            android:text="Phân công người khác xử lý tiếp công việc khi công việc đã thất bại: Khi phân công việc tự lấy từ công việc cũ để tạo thành record mới và người tạo sẽ là manager, người xử lý là user được manager chọn" />
    </LinearLayout>
</LinearLayout>